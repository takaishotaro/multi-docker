{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "takaishotaro/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image":"takaishotaro/multi-server",
            "hostname":"api",
            "essential": false
        },
        {
            "name":"worker",
            "image":"takaishotaro/multi-worker",
            "hostname":"worker",
            "essential": false
        },
        {
            "name":"nginx",
            "image":"takaishotaro/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMapping": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "api"]
        }
    ]
}